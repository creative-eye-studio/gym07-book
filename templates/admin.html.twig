<!DOCTYPE html>
<html lang='fr' dir="ltr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="noindex, nofollow">
        <title>{{ site_name }} - {% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app-admin') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}
    </head>
    <body class="admin-page">
        <div id="app">
            <!-- En-Tête -->
            <header>
                <h1>Interface d'administration</h1>
            </header>
            
            <!-- Navigation -->
            <nav class="navigation">
                <span class="website-title">{{ site_name }}</span>
                <ul>
                    <li>
                        <a href="{{ path('app_admin') }}">Calendrier</a>
                    </li>
                    <li>
                        <a href="{{ path('app_ext_profile') }}">Voir mon profil</a>
                    </li>
                    {# <li>
                        <a href="{{ path('web_index') }}" target='_blank' rel='noopener'>Voir le site</a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_files') }}">Médias</a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nav') }}">Navigation</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_pages') }}">Pages du site</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_posts') }}">Actualités</a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_emails') }}">Modèles d'E-Mails</a>
                    </li> #}

                    {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('app_ext_cours') }}">Gestion des cours</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_users') }}">Gestion des adhérents</a>
                    </li>
                    <li>
                        <a href=" {{ path('app_courses_list') }} ">Gestion du planning</a>
                    </li>
                    {# <li>
                        <a href="{{ path('admin_settings') }}">Paramètrage du site</a>
                    </li> 
                    <li>
                        <a target='_blank' rel='noopener'>Matomo</a>
                    </li>
                    <li>
                        <a target='_blank' rel='noopener'>Google Analytics</a>
                    </li> 
                    <li>
                        <a target='_blank' rel='noopener'>Google Search Console</a>
                    </li> #} 
                    {% endif %}

                    <li>
                        <a href="{{ path('app_admin_change_password') }}">Modifier mes informations</a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                </ul>
            </nav>
            
            <!-- Contenu -->
            <main>
                {% block body %}{% endblock %}
            </main>

            <!-- Btn Nav Mobile -->
            <button class="btn-link btn-nav">
                <i class="fa-solid fa-bars" style="color: #fff"></i>
            </button>
            
            <!-- Pied de page -->
            <footer>
                <p>Dream Site - Version {{ version }}<br />
                Conception et développement : Creative Eye Studio</p>
            </footer>
        </div>
        
        {% block javascripts %}
            {{ encore_entry_script_tags('app-admin') }}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        {% endblock %}
    </body>
</html>
